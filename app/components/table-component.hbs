{{yield}}

<Nfield::Table @columns={{this.columns}} @records={{this.records}}>
  <:header as |Header|>
    <Header.Row as |Row|>
      {{#each Header.columns as |column|}}
        <Row.Cell @column={{column}} as |Cell|>
          <Cell.Content>{{column.name}}</Cell.Content>
        </Row.Cell>
      {{/each}}
    </Header.Row>
  </:header>
  <:body as |Body|>
    {{#each Body.rows as |row|}}
      <Body.Row @row={{row}} as |Row|>
        {{#each Row.cells as |cell|}}
          <Row.Cell @column={{cell.definition}} as |Cell|>
            <Cell.Content>{{cell.value}}</Cell.Content>
          </Row.Cell>
        {{/each}}
      </Body.Row>
    {{/each}}
  </:body>
</Nfield::Table>